{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2021",
        "outDir": "dist",
        "lib": ["ESNext"],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        // "experimentalDecorators": true,
        // "emitDecoratorMetadata": true,
        "moduleResolution": "Node16",
        "pretty": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "./typings",
        "skipLibCheck": true,
        "tsBuildInfoFile": ".tsbuildinfo",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
